<script>
    var $genderSelected = false;
    var $clicked = "You're ... ?";
    var $animationCanStart = false;
    var $animationCanStart2 = false;
    $("#girl").mouseover(function () {
        $("#gender-text").html("You're a girl ?");

    }).mouseout(function () {
        $("#gender-text").html($clicked);
    });

    $("#man").mouseover(function () {
        $("#gender-text").html("You're a man ?");
    }).mouseout(function () {

        $("#gender-text").html($clicked);

    })


    $("#girl").on("click", function () {
        $genderSelected = true;
        $animationCanStart = false;
        $clicked = "I'm a girl";
        $("#gender-text").html($clicked);
        $(this).find("img").css({"-webkit-filter": "grayscale(0%)", "filter": "grayscale(0%)"});
        $(this).css("border", "solid #26b8f3 3px");
        $("#man").css({"border": "dotted #26b8f3 3px"});
        $("#man").find("img").css({"-webkit-filter": "grayscale(100%)", "filter": "grayscale(100%)"});
    });
    $("#man").on("click", function () {
        $genderSelected = true;
        $animationCanStart = false;
        $clicked = "I'm a man";
        $("#gender-text").html($clicked);
        $(this).find("img").css({"-webkit-filter": "grayscale(0%)", "filter": "grayscale(0%)"});
        $(this).css("border", "solid #26b8f3 3px");
        $("#girl").css({"border": "dotted #26b8f3 3px"});
        $("#girl").find("img").css({"-webkit-filter": "grayscale(100%)", "filter": "grayscale(100%)"});
    });


    $(".pager-next").on("click", function () {
        $animationCanStart = true;
            $('.pager-next').css("display", "none");
            $(".pager-prev").css("display", "block");
            $("#gender").addClass("animated visible fadeOutDownBig").css({'position': 'absolute'});
            $('#form').css("display", "block").addClass("animated visible fadeInDown").one("webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend", function () {
                if ($animationCanStart == true) {
                    $('#form').removeClass("animated visible fadeInDown");
                    $("#gender").removeClass("animated  visible fadeOutDownBig").css({'display': 'none', 'position' :'static'});
                    $animationCanStart = false;
                }
            });
        //  $("#gender").replaceWith($('#form'));
    })
    $(".pager-prev").on("click", function () {
        $animationCanStart2 = true;
            $(".pager-prev").css("display", "none");
            $(".pager-next").css("display", "block");
            $("#form").addClass("animated visible fadeOutDownBig").css({'position': 'absolute'});
            $('#gender').css({'display': 'block'}).addClass("animated visible fadeInDown").one("webkitAnimationEnd mozAnimationEnd MSAnimationEnd oanimationend animationend", function () {
                if ($animationCanStart2 == true) {
                $('#gender').removeClass("animated visible fadeInDown");
                $("#form").removeClass("animated  visible fadeOutDownBig").css({'display': 'none', 'position' :'static'});
                    $animationCanStart2 = false;
                }
            });
        // $("#gender").replaceWith($('#form'));
    })
</script>
